@page "{id?}"
@model TracksModel
@{
    ViewData["Title"] = "Tracks";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        @foreach (var track in Model.Tracks)
        {
            <div class="card">
                <h4 class="card-header">@track.name</h4>
                <div class="card-block">
                    <p class="card-text">@track.description</p>
                    <div class="form-group">
                        <label for="request_key" class="control-label">Request Key</label>
                        <input value="@track.request_key" class="form-control" autocomplete="off" disabled />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
