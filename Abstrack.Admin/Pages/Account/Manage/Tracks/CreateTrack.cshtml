@page
@model Abstrack.Admin.Pages.Account.Manage.Tracks.CreateTrackModel
@{
    ViewData["Title"] = "Create New Track";
}

<h2>Create Track</h2>
<form method="post">
    <div class="form-group-lg">
        <label asp-for="Input.Name" class="control-label">Track Name*</label>
        <input asp-for="Input.Name" class="form-control" autocomplete="off" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group-lg">
        <label asp-for="Input.Description" class="control-label">Track Description</label>
        <input asp-for="Input.Description" class="form-control" autocomplete="off" />
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Create track</button>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
