@using Microsoft.AspNetCore.Identity
@using Abstrack.Admin.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav float-right">
            <li class="nav-item">
                <a class="nav-link" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav float-right">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Login">Log in</a>
        </li>
    </ul>
}
